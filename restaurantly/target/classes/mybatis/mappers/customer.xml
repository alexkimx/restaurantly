<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.customer">
	<resultMap id="customerResult" type="customerVO">
		<result property="customer_id" column="customer_id" />
		<result property="customer_pw" column="customer_pw" />
		<result property="customer_name" column="customer_name" />
		<result property="customer_email" column="customer_email" />
		<result property="customer_phone" column="customer_phone" />
		<result property="customer_birthdate"
			column="customer_birthdate" />
		<result property="customer_joindate" column="customer_joindate" />
		<result property="customer_image_path"
			column="customer_image_path" />
		<result property="customer_state" column="customer_state" />
	</resultMap>

	<select id="login" resultType="customerVO"
		parameterType="java.util.Map">
		<![CDATA[
			select * from customer 
			where customer_id = #{customer_id}
			and customer_pw = #{customer_pw}
		]]>
	</select>

	<select id="selectOverlappedID" parameterType="String"
		resultType="String">
		select decode(count(*),1, 'true', 0, 'false')
		from customer
		where customer_id = #{id}
	</select>

	<insert id="insertNewMember" parameterType="customerVO">
  <![CDATA[
    	insert into customer(customer_id,
				 					 customer_pw,
                                     customer_name,
                                     customer_email,
                                     customer_phone,
                                     customer_birthdate,
                                     customer_joindate,
                                     customer_image_path,
                                     customer_state
                                     )
							 values(#{customer_id},
									#{customer_pw},
									#{customer_name},
                                 	#{customer_email},
                                   	#{customer_phone},
                                   	#{customer_birthdate},
                                    #{customer_joindate},
                                    #{customer_image_path},
                                    #{customer_state}
                                    )
                                        
   ]]>
	</insert>
</mapper>