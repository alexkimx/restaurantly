<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.review">
	<resultMap id="reviewsResult" type="reviewDTO">
		<!-- <result property="level" column="level" /> -->
		<result property="review_id" column="review_id" />
		<result property="content" column="content" />
		<result property="review_writedate"
			column="review_writedate" />
		<result property="review_image_path" column="review_image_path" />
	</resultMap>

	<resultMap id="imgResult" type="imageVO">
		<result property="imageFileNO" column="imageFileNO" />
		<result property="review_id" column="review_id" />
		<result property="review_image_path" column="review_image_path" />
	</resultMap>

	<!-- 리뷰 등록 -->
	<insert id="insertNewReview" parameterType="java.util.Map">
		<![CDATA[
			INSERT into review(review_id, review_score, review_content, review_image_path, customer_id, restaurannt_license)
			VALUES(#{review_id},#{review_score},	#{review_content}, #{review_image_path},	#{customer_id},#{restaurannt_license})
		]]>
	</insert>


	<select id="selectReivew" resultType="reviewDTO"
		parameterType="integer">
    <![CDATA[
      SELECT * from review
      where review_id = #{review_id}		
    ]]>
	</select>

	<select id="selectAllReviewsList" resultMap="reviewsResult"> <![CDATA[ 
		SELECT review_id, review_content, review_writedate, review_image_path, customer_id from review; ]]>
	</select>

	<!-- 리뷰 수정 -->
	<update id="updateReivew" parameterType="java.util.Map">
	<![CDATA[
      update review
		set review_content=#{review_content}
		<if test="review_image_path!='' and review_image_path!=null">
			, review_image_path=#{review_image_path}
		</if>
		where review_id=#{review_id}	
    ]]>
	</update>

	<!-- 리뷰 삭제 -->
	<delete id="deleteReview" parameterType="int">
    <![CDATA[
      delete from review
      where review_id=#{review_id};	
    ]]>
	</delete>



</mapper>