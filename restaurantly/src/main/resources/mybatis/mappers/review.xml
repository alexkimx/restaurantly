<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.review">
	<resultMap id="articlesResult" type="articleVO">
		<result property="level" column="level" />
		<result property="articleNO" column="articleNO" />
		<result property="parentNO" column="parentNO" />
		<!-- <result property="title" column="title" /> -->
		<result property="content" column="content" />
		<result property="writeDate" column="writeDate" />
		<result property="imageFileName" column="imageFileName" />
	</resultMap>

	<resultMap id="imgResult" type="imageVO">
		<result property="imageFileNO" column="imageFileNO" />
		<result property="articleNO" column="articleNO" />
		<result property="imageFileName" column="imageFileName" />
	</resultMap>
	<!-- 리뷰 등록 리뷰 수정 리뷰 삭제 -->
	<select id="selectAllArticlesList" resultMap="articlesResult">
    <![CDATA[
      SELECT level, articleNO, parentNO, content, writeDate, imageFileName, id
      from a_board
      START WITH  parentNO=0
      CONNECT BY PRIOR articleNO=parentNO 
      ORDER SIBLINGS BY articleNO DESC		
    ]]>
	</select>

	<!-- 이미지 있는 리뷰 추가 -->

	<insert id="insertNewReview" parameterType="java.util.Map">
		<![CDATA[
			INSERT into review(review_id, review_score, review_content, review_image_path, customer_id, restaurannt_license)
			VALUES(#{review_id},#{review_score},	#{review_content}, #{review_image_path},	#{customer_id},#{restaurannt_license})
		]]>
	</insert>


	<select id="selectReivew" resultType="articleVO" <!-- REVIEWVO -->
		parameterType="integer">
    <![CDATA[
      SELECT * from review
      where review_id = #{review_id}		
    ]]>
	</select>

	<update id="updateReivew" parameterType="java.util.Map">
	<![CDATA[
      update review
		<!-- set title=#{title}, -->
		review_content=#{review_content}
		<if test="imageFileName!='' and imageFileName!=null">
			, review_image_path=#{review_image_path}
		</if>
		where review_id=#{review_id}	
    ]]>
		

	</update>

	<delete id="deleteArticle" parameterType="int">
    <![CDATA[
      delete from a_board
      where articleNO in (
         SELECT articleNO FROM  a_board
         START WITH articleNO = #{articleNO}
         CONNECT BY PRIOR  articleNO = parentNO )
    ]]>
	</delete>

	<!-- 다중 이미지 추가 SQL문 -->

	<!-- <insert id="insertNewArticle" parameterType="java.util.Map"> <![CDATA[ 
		insert into a_board(articleNO, id, title, content, imageFileName) values(#{articleNO}, 
		#{id}, #{title}, #{content}, null) ]]> </insert> <insert id="insertNewImage" 
		parameterType="java.util.Map"> <foreach item="item" collection="list" open="INSERT 
		ALL" separator=" " close="SELECT * FROM DUAL" > INTO t_imageFile(imageFileNO, 
		imageFileName, articleNO, regDate) VALUES (#{item.imageFileNO}, #{item.imageFileName}, 
		#{item.articleNO}, sysdate) </foreach> </insert> -->
	<select id="selectNewImageFileNO" resultType="int">
    <![CDATA[
      SELECT  nvl(max(imageFileNO),0) from t_imageFile		
    ]]>
	</select>


	<select id="selectImageFileList" resultMap="imgResult"
		parameterType="int">
    <![CDATA[
      SELECT * from t_imageFile
      where articleNO=#{articleNO}	
    ]]>
	</select>

</mapper>