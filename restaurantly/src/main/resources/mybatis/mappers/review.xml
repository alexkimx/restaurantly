<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.review">
	<resultMap id="reviewsResult" type="reviewVO">
		<result property="level" column="level" />
		<result property="review_id" column="review_id" />
		<!-- <result property="parentNO" column="parentNO" /> -->
		<!-- <result property="title" column="title" /> -->
		<result property="content" column="content" />
		<result property="review_review_writedate" column="review_review_writedate" />
		<result property="review_image_path" column="review_image_path" />
	</resultMap>

	<resultMap id="imgResult" type="imageVO">
		<result property="imageFileNO" column="imageFileNO" />
		<result property="review_id" column="review_id" />
		<result property="review_image_path" column="review_image_path" />
	</resultMap>
	<!-- 리뷰 등록 리뷰 수정 리뷰 삭제 -->
	<select id="selectAllreviewsList" resultMap="reviewsResult">
    <![CDATA[
      SELECT level, review_id, parentNO, content, review_review_writedate, review_image_path, id
      from a_board
      START WITH  parentNO=0
      CONNECT BY PRIOR review_id=parentNO 
      ORDER SIBLINGS BY review_id DESC		
    ]]>
	</select>

	<!-- 이미지 있는 리뷰 추가 -->

	<insert id="insertNewReview" parameterType="java.util.Map">
		<![CDATA[
			INSERT into review(review_id, review_score, review_content, review_image_path, customer_id, restaurannt_license)
			VALUES(#{review_id},#{review_score},	#{review_content}, #{review_image_path},	#{customer_id},#{restaurannt_license})
		]]>
	</insert>


	<select id="selectReivew" resultType="reviewVO" <!-- REVIEWVO -->
		parameterType="integer">
    <![CDATA[
      SELECT * from review
      where review_id = #{review_id}		
    ]]>
	</select>

	<update id="updateReivew" parameterType="java.util.Map">
	<![CDATA[
      update review
		<!-- set title=#{title}, -->
		review_content=#{review_content}
		<if test="review_image_path!='' and review_image_path!=null">
			, review_image_path=#{review_image_path}
		</if>
		where review_id=#{review_id}	
    ]]>
		

	</update>

	<delete id="deletereview" parameterType="int">
    <![CDATA[
      delete from a_board
      where review_id in (
         SELECT review_id FROM  a_board
         START WITH review_id = #{review_id}
         CONNECT BY PRIOR  review_id = parentNO )
    ]]>
	</delete>

